
<div id="showItem" class="container jumbotron">
	<p>
	  <strong>Title:</strong>
	  <%= @product.title %>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= @product.description %>
	</p>

	<p>
	  <strong>Price:</strong>
	  <%= @product.price %>
	</p>

	<p>
	  <strong>Availability:</strong>
	  <%= @product.availability %>
	</p>

	<%= link_to 'Edit', edit_product_path(@product), class: "btn btn-warning border-right" %> &nbsp; &nbsp; &nbsp;
	<%= link_to 'Back', products_path, class: "btn btn-primary" %>
</div>
